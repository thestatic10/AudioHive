<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="24dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_music_note"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Group Music Player"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Listen together, control together"
        android:textSize="16sp"
        android:textColor="@color/secondary_text"
        android:layout_marginBottom="40dp" />

    <!-- Spotify Connection Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="20dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spotify Connection"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_spotify_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect to Spotify to create sessions"
            android:textSize="14sp"
            android:textColor="@color/secondary_text"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_spotify_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Connect to Spotify"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/spotify_green"
            android:textColor="@android:color/white"
            android:drawableStart="@drawable/ic_spotify"
            android:drawablePadding="8dp"
            android:paddingHorizontal="20dp"
            app:cornerRadius="25dp" />

    </LinearLayout>

    <!-- Session Actions -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Party"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btn_create_session"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Session"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_add"
        android:drawablePadding="12dp"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="30dp"
        android:elevation="4dp" />

    <Button
        android:id="@+id/btn_join_session"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Join Session"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/secondary_color"
        android:textColor="@android:color/white"
        android:drawableStart="@drawable/ic_group"
        android:drawablePadding="12dp"
        android:paddingHorizontal="24dp"
        app:cornerRadius="30dp"
        android:elevation="4dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Create a session to share your Spotify queue\nwith friends in real-time"
        android:textSize="12sp"
        android:textColor="@color/secondary_text"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />

</LinearLayout> 