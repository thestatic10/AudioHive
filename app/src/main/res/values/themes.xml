<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroupMusicPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

    </style>

    <style name="Theme.GroupMusicPlayer" parent="Base.Theme.GroupMusicPlayer" />
    
    <!-- Enhanced button styles -->
    <style name="PlayPauseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/play_button_background</item>
        <item name="android:scaleType">center</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="ControlButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>
    
    <!-- Text styles -->
    <style name="TrackTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    
    <style name="TrackArtist" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
</resources> 